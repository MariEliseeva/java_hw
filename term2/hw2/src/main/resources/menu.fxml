<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="300.0" prefWidth="300.0"
          xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="spbau.eliseeva.XO.Controller.MenuController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="buttonFriend" mnemonicParsing="false"
            prefHeight="75.0" prefWidth="300.0"
            text="play with friend" textFill="#0047ff">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>
    <Button fx:id="buttonStatistics" cache="true" mnemonicParsing="false"
            prefHeight="75.0" prefWidth="300.0"
            text="statistics" textFill="#0047ff" GridPane.rowIndex="3">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>
    <Button fx:id="buttonPCEasy" mnemonicParsing="false"
            prefHeight="75.0" prefWidth="300.0"
            text="play with PC: easy" textFill="#0047ff" GridPane.rowIndex="1">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>
    <Button fx:id="buttonPCHard" mnemonicParsing="false"
            prefHeight="75.0" prefWidth="300.0"
            text="play with PC: hard" textFill="#0047ff" GridPane.rowIndex="2">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>
</GridPane>
